<% layout('/layouts/boilerplate') -%>
<div class="row offset-3 logininfo">
    <h2 class="mt-2 mb-3">SignUp for Wanderlust.</h2>
    <form method="POST" action="/signup" novalidate class="needs-validation">
        <div>
            <div class="md-2">
                <label for="username" class="form-label">username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
        </div>
        <div>
            <div class="md-2">
                <label for="email" class="form-label">e-mail</label>
                <input name="email" id="email" type="email" class="form-control" required>
            </div>
        </div>
        <div>
            <div class="md-2">
                <label for="password" class="form-label">password</label>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="valid-feedback">Strong password!</div>
            </div>
        </div>
        <button class="btn btn-success mt-3 mb-3 ">SignUp</button>
    </form>
</div>