<% layout('/layouts/boilerplate') -%>
<div class="row offset-2">
    <h3>Create New Listing:</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="col-8">
            <div class="md-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
                <div class="valid-feedback"> Title Looks good!</div>
            </div>
            <div class="md-3">
                <label for="description:" class="form-label">Description</label>
                <input name="listing[description]" placeholder="Enter Description" class="form-control">
                <div class="invalid-feedback">Enter the Discription</div>
            </div>
            <div class="md-3">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image]" type="file" class="form-control" required>
            </div>
            <div class="row">
                <div class="md-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                    <div class="invalid-feedback">Enter the valid Price</div>
                </div>
                <div class="md-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                    <div class="invalid-feedback">Provide valid Country</div>
                </div>
            </div>
            <div class="md-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
                <div class="invalid-feedback">Provide valid Location</div>
            </div>
        </div>
        <button class="btn btn-dark add-btn mt-3 mb-2">ADD</button>
    </form>
</div>

